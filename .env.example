# Environment configuration for Weather Agent
# Copy this file to .env and fill in the values

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_COMMAND=npx
MCP_SERVER_ARGS=@modelcontextprotocol/server-weather

# Alternative: Python-based MCP server
# MCP_SERVER_COMMAND=python
# MCP_SERVER_ARGS=-m weather_mcp_server

# Weather Agent Configuration
DEFAULT_LOCATION=London
WEATHER_UNITS=imperial

# Options:
# - metric: Celsius (C), km/h
# - imperial: Fahrenheit (F), mph  
# - standard: Kelvin (K), m/s

# OpenWeather API Configuration (optional)
OPENWEATHER_API_KEY=your_api_key_here

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
